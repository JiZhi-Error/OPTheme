<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/tv_cdkDialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_h1"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="CDK" />

    <EditText
        android:id="@+id/et_cdkDialog_cdk"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:autofillHints=""
        android:background="@null"
        android:drawableBottom="@drawable/shape_gray_line"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:singleLine="true"
        android:textColorHint="@color/gray_h2"
        tools:ignore="LabelFor,RtlSymmetry" />

    <Button
        android:id="@+id/btn_cdkDialog_done"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_bg_login"
        android:text="@string/done"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />

</LinearLayout>