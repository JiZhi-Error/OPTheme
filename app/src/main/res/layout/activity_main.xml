<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@drawable/main_bg_main_top"
            tools:ignore="ContentDescription" />

        <Button
            android:id="@+id/btn_atyMain_login"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="right"
            android:layout_margin="15dp"
            android:background="@drawable/main_bg_login"
            tools:ignore="RtlHardcoded" />

    </FrameLayout>

<!--    <com.google.android.material.tabs.TabLayout-->
<!--        android:id="@+id/tab_atyMain"-->
<!--        android:layout_width="match_parent"-->
<!--        android:background="@color/white"-->
<!--        android:layout_height="70dp"/>-->

    <com.qmuiteam.qmui.widget.tab.QMUITabSegment2
        android:id="@+id/tab_atyMain"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        app:qmui_bottomDividerColor="@color/gray_h2"
        app:qmui_bottomDividerHeight="5dp"
        tools:ignore="PxUsage" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_atyMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fitsSystemWindows="true" />

</LinearLayout>